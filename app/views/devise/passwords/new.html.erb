<div class="row pt-5">
  <div class="col-sm-8 offset-sm-2 text-center">
<div class="jumbotron main-objects p-5">
<h2>Forgot your password?</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<%= f.email_field :email, autofocus: true, autocomplete: "email" %>

<%= f.submit "Send Password Reset Instructions", class: "btn btn-light", placeholder: "Enter your email" %>
<% end %>
<%= render "devise/shared/links" %>
