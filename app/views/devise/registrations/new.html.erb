<script type="text/javascript">

  window.onload = function() {
    window.scrollTo({ top: document.body.scrollHeight, behavior: 'smooth' })


  }

</script>
<body class="h-100">
<div class="row pt-5">
    <div class="col-sm-8 offset-sm-2 text-center">
        <div class="jumbotron text-center p-5 main-objects">
            <h1 class="display-2">Sign up</h1>
        </div>
    </div> 
</div>
<div class="row">
    <div class="col-sm-8 offset-sm-2">
        <div class="jumbotron p-5 main-objects">


          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.email_field :email, autofocus: false, autocomplete: "email", placeholder: "Enter Email" %>
          
          <%= f.password_field :password,  autocomplete: "new-password", placeholder: "Enter Password"  %>

          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Re-Enter Password" %>
          <%= f.text_field :firstname,  autofocus: false, autocomplete: "name", placeholder: "Enter First Name" %>
          <%= f.text_field :surname,  autofocus: false, autocomplete: "surname", placeholder: "Enter Surname"%>

          <%= f.date_field :dob,  autofocus: false, autocomplete: "date of birth"%>
          <%= f.text_field :post_code,  autofocus: false, autocomplete: "post code", placeholder: "Enter Post Code"%>
          <%= f.submit "Sign up", data: { confirm: 'Do you consent to giving us your data?' } %>

          <% end %>
          <%= render "devise/shared/links" %>
        </div>
        </div>
        </div>

        </body>

