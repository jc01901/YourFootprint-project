<div class="row pt-5">
    <div class="col-sm-8 offset-sm-2 text-center">
        <div class="jumbotron text-center p-5 main-objects">
            <h1 class="display-2">Log in</h1>
        </div>
    </div> 
</div>
<div class="row">
  <div class="col-sm-8 offset-sm-2">
    <div class="jumbotron p-5 main-objects">
      <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter Email" %>
      <%= f.password_field :password,  autocomplete: "current-password", placeholder: "Enter Password"  %>
      <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me, class: "ml-1" %>
      <% end %>
      <%= f.submit "Log In", class: "btn btn-light" %>
      <% end %>
      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
